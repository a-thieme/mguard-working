study-id mperf
data-owner-id dd40c
data-requester-ids C
data-stream-name org.md2k--*
data-window
{
  allow
  {
    stream-name *
    column-name-value
    {
      * *   ; <column-name> <value>
    }
  }
  deny
  {
    stream-name org.md2k--mperf--dd40c--phone--location
    column-name-value
    {
      * * ; <column-name> <value>
    }
  }
}

